<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/cropped_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/scanned_image" />

    <Button
        android:id="@+id/scan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scan"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/cropped_image_view"
        app:layout_constraintEnd_toEndOf="@+id/cropped_image_view"
        app:layout_constraintStart_toStartOf="@+id/cropped_image_view" />

</androidx.constraintlayout.widget.ConstraintLayout>